{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"plugin:vue/essential",
		"airbnb-base",
		"prettier",
		"vuepress"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"vue",
		"prettier",
		"markdown"
	],
	"rules": {
		"prettier/prettier": "error",
		"import/no-unresolved": [
			2,
			{ "ignore": ["^@"] }
		]
	}
}